<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.otavio.newshowup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".auth.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".auth.ArtistRegistrationActivity" />
        <activity android:name=".auth.ContratanteRegistrationActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name=".services.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".services.SearchEventService"
            android:enabled="true" />

        <activity
            android:name=".artista.HomeArtistaActivity"
            android:label="@string/title_activity_home_artista"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".contratante.HomeContratanteActivity"
            android:label="@string/title_activity_home_contratante"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".auth.Register2Activity" />
        <activity android:name=".artista.BuscarEventoActivity" />
        <activity android:name=".artista.FavoritesEventsActivity" />
        <activity android:name=".contratante.BuscarArtistaActivity" />
        <activity android:name=".contratante.MeusEventosActivity" />
        <activity android:name=".contratante.CriarEventoActivity" />
        <activity android:name=".youtube.YoutubeActivity" />
        <activity android:name=".artista.PerfilArtistaActivity" />
        <activity android:name=".evento.DetalhesEventoActivity" />
        <activity android:name=".artista.ResultadoBuscaEventoActivity" />
        <activity android:name=".contratante.PerfilContratanteActivity" />
        <activity android:name=".contratante.ArtistasFavoritosActivity"></activity>
    </application>

</manifest>